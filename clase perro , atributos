package clase1;

import javax.swing.JOptionPane;

/**
 *
 * @author Lab03
 */
public class Perro {

    String raza;
    String color;
    double tamaño;
    double peso;
    int edad;

    public void morder() {

        System.out.println("el teva a morder");
    }

    public void dormir() {
        System.out.println("el perro esta dormiendo");
    }

    public void mostrarDatos() {
        System.out.println("la raza es " + raza);
        System.out.println("el color es " + color);
        System.out.println("el tamaño es " + tamaño);
        System.out.println("el peso es " + peso);
        System.out.println("la edad  es " + edad);
    }
    
public void ingresarDatos() {
        raza = JOptionPane.showInputDialog("Ingresar la raza");
        color = JOptionPane.showInputDialog("Ingresar el color");
        tamaño= Integer.parseInt(JOptionPane.showInputDialog("Ingresar el tamaño"));
        peso = Integer.parseInt(JOptionPane.showInputDialog("Ingresar el peso"));
        edad = Integer.parseInt(JOptionPane.showInputDialog("Ingresar la edad"));
            
    }
    
}








